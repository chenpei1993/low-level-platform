<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jenschen.mapper.QuestionMapper">
    <resultMap id="BaseResultMap" type="com.jenschen.entity.CustomerEntity">
        <result column="id" jdbcType="INTEGER" property="id" />
    </resultMap>

    <select id="deleteByInfoId" resultType="java.lang.Integer">
        update question set is_deleted = 1,
            deleted_by = #{deletedBy},
            deleted_at = now(),
            updated_by = #{updatedBy},
            updated_at = now()
        where info_id = #{info_id}
    </select>


</mapper>